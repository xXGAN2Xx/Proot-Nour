{
  "log": {
    "level": "warn",
    "timestamp": true
  },
  "inbounds": [
    {
      "type": "hysteria2",
      "tag": "hysteria-in",
      "listen": "::",
      "listen_port": ${SERVER_PORT},
      "users": [
        {
          "password": "123456"
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "playstation.net",
        "key_path": "/etc/sing-box/key.pem",
        "certificate_path": "/etc/sing-box/cert.pem",
        "alpn": [
          "h3"
        ]
      },
      "congestion_control": "bbr",
      "up_mbps": 5,
      "down_mbps": 40
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "direct"
      },
      {
        "ip_is_private": true,
        "outbound": "direct"
      }
    ],
    "final": "direct",
    "auto_detect_interface": true
  },
  "experimental": {
    "cache_file": {
      "enabled": true,
      "path": "/var/lib/sing-box/cache.db"
    }
  }
}
